<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="artist.web.musicalsymphony">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMusicalUI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Playlists"
            android:label="@string/category_playlists"
            android:parentActivityName=".MainMusicalUI" />
        <activity
            android:name=".LibraryActivity"
            android:label="@string/category_library"
            android:parentActivityName=".MainMusicalUI" />
        <activity
            android:name=".RadioActivity"
            android:label="@string/category_radio"
            android:parentActivityName=".MainMusicalUI" />
        <activity
            android:name=".MusicOnDemand"
            android:label="@string/category_musicOnDemand"
            android:parentActivityName=".MainMusicalUI" />
        <activity
            android:name=".SongPlaying"
            android:label="@string/now_playing"
            android:parentActivityName=".LibraryActivity" />
        <activity android:name=".HappySongs"
            android:label="Happy Songs"
            android:parentActivityName=".MainMusicalUI"/>
        <activity android:name=".SadSongs"
            android:label="Sad Songs"
            android:parentActivityName=".MainMusicalUI"/>
        <activity android:name=".LoveSongs"
            android:label="Love Songs"
            android:parentActivityName=".MainMusicalUI"/>
        <activity android:name=".AngrySongs"
            android:label="Angry Songs"
            android:parentActivityName=".MainMusicalUI"></activity>
    </application>

</manifest>